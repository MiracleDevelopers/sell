border-1px($color)
  position relative
  &:after
    display block
    position absolute
    left 0
    bottom 0
    border-top 1px solid $color
    width 100%
    content " "
goods-border($width, $left)
  position relative
  &:after
    display block
    position absolute
    left $left
    bottom 0
    border-top 1px solid rgba(7,17,27,.1)
    width $width
    content " "
shope-border($color)
  position relative
  &:after
    display block
    position absolute
    right  0
    top 0
    border-right 1px solid $color
    height  100%
    content " "
border-none()
  &:after
    display none
  &:before
    display none
bg-img($url)
  background url($url+'@2x.png') no-repeat
  background-size 100% 100%
  -webkit-background-size 100% 100%
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background url($url+'@3x.png') no-repeat
    background-size 100% 100%
    -webkit-background-size 100% 100%
iphone5()
  @media screen and (max-width: 360px)
    .fee
      margin-left 6px
    .cost
      width 99px
    .shopping
      font-size 12px
    .addTo
      right 2px
    .serverScore
      display none
    .priceNow
      display none
ratings-rightBorder()
  position relative
  &:after
    display block
    position absolute
    right 0
    bottom 25%
    border-top 1px solid rgba(7,17,27,0.1)
    width 56px
    content " "
    transform rotate(90deg)
    transform-origin right
